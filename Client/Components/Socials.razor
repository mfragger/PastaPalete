<div class="flex justify-start space-x-8 @(AdditionalCss)">
    <img src="images/footer/facebook.webp" class="self-center w-8 h-8 @(IsInvert ? "invert" : "")">
    <img src="images/footer/instagram.webp" class="self-center h-7 w-7 @(IsInvert ? "invert" : "")">
    <img src="images/footer/twitter.webp" class="self-center w-7 h-7 @(IsInvert ? "invert" : "")">
    <img src="images/footer/youtube.webp" class="self-center w-8 h-8 @(IsInvert ? "invert" : "")">
</div>

@code {
    [Parameter]
    public string? AdditionalCss { get; set; }

    [Parameter]
    public bool IsInvert { get; set; }
}